page{
  background-color: #eee;
}
.cheap {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.item{
  width: 49%;
  background: #ffffff;
  border-radius: 4rpx;
  font-size: 12px;
  margin-bottom: 10rpx;
}
.item-showPic{
  width: 100%;
  height: 350rpx;
  border-radius: 4rpx 4rpx 0 0;
}
.item-title{
  display: block;
  margin:8rpx 0 6rpx 10rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.item-shop {
  display: flex;
  align-items: center;
}
.item-shop image{
  width: 26rpx;
  height: 26rpx;
  margin-left:10rpx;
}
.item-shop text{
  font-size: 12px;
  color: #bfbfbf;
  margin-left:8rpx;
  text-overflow:ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.item-money{
  margin: 8rpx 0 0 10rpx;
  padding-bottom: 10rpx;
}
.item-money text:nth-child(1) {
  color: #f59800;
  font-weight: 600;
  font-size: 16px;
  margin-right: 10rpx
}
.item-money text:nth-child(2) {
  text-decoration:line-through;
  margin-right: 20rpx;
}
.item-money text:nth-child(3) {
  font-size: 10px;
  color: #f59800;
  display: inline-block;
  border: 1px solid #f59800;
  padding: 0 6rpx;
}
.footer{
  font-size: 13px;
  color: #c0c0c0;
  text-align: center;
  margin-top: 30rpx;
}